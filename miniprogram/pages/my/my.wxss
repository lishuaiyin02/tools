/* pages/my/my.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: rgba(241, 237, 237, 0.836);
}
.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}
.header image {
  width: 200rpx;
  height: 200rpx;
}
.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}
.zhushi{
margin:10rpx ;
font-family: '微软雅黑';
font-size: 34rpx;
color: rgb(5, 1, 252);

}
.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}
.bottom {
  width: 50%;
  border-radius: 80rpx;
  margin-top: 40rpx;
  font-size: 35rpx;
  color: #fff;
  background-color: rgb(52, 214, 3);
}

.userinfo {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  height: 180rpx;
  line-height: 180rpx;
  background-color: #fff;
  /* align-items: center; */
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.space{
  height: 50rpx;
  background:rgba(243, 238, 238, 0.219);
}
.center-space{
  height: 5rpx;
  background:rgba(243, 238, 238, 0.219);
}
.list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
  vertical-align: middle;
  /* align-items: center; */
}
.houtai{
  font: '微软雅黑';
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
  vertical-align: middle;
  width: 100%;
  padding-left: 35rpx;
}
.reply-input{
  width: 500rpx;
  height: 60rpx;
  font-size: 32rpx;
  color: #000;
  margin-top: 20rpx;
  border: #ccc solid 2rpx;
}
.control-password{
  display: flex;
}
.showImg{
  margin-top: 20rpx;
  padding: 10rpx;
  width: 40rpx;
  height: 55rpx;
}